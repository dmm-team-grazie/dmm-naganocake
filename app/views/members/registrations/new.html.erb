<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

<div class = "form-row">
  <label class="col-sm-2"><%= f.label "名前" %></label>
    <span class = "col-sm-1">(姓)</span><%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: "col-sm-3" %>
    <span class = "col-sm-1">(名)</span><%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "col-sm-3" %>
</div><br>

<div class = "form-row">
    <label class = "col-sm-2"><%= f.label "フリガナ" %></label>
    <span class = "col-sm-1">(セイ)</span><%= f.text_field :last_kana_name, autofocus: true, autocomplete: "last_kana_name", class: "col-sm-3" %>
    <span class = "col-sm-1">(メイ)</span><%= f.text_field :first_kana_name, autofocus: true, autocomplete: "first_kana_name", class: "col-sm-3" %>
</div><br>

<div class = "form-row">
    <label class = "col-sm-3"><%= f.label "email" %></label>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-sm-3" %>
</div><br>

<div class = "form-row">
    <label class = "col-sm-3"><%= f.label "郵便番号" %><span>(ハイフンなし)</span></label>
    <%= f.text_field :postal_code, class: "col-sm-3" %>
</div><br>

<div class = "form-row">
    <label class = "col-sm-3"><%= f.label "住所" %></label>
    <%= f.text_field :address, class: "col-sm-7" %>
</div><br>

<div class = "form-row">
    <label class = "col-sm-3"><%= f.label "電話番号" %><span>(ハイフンなし)</span></label>
    <%= f.text_field :phone_number, class: "col-sm-3" %>
</div><br>

<div class = "form-row">
    <label class = "col-sm-3"><%= f.label "パスワード" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上)</em>
    <% end %></label>
    <%= f.password_field :password, autocomplete: "new-password", class: "col-sm-3" %>
</div><br>

<div class = "form-row">
    <label class = "col-sm-3"><%= f.label "パスワード" %><span>(確認用)</span></label>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "col-sm-3" %>
</div><br>

  <div class="actions">
    <%= f.submit "新規登録", class: "btn btn-success btn-lg" %>
  </div><br>
<% end %>
</div>

<h2>既に登録済みの方</h2><br>
<p><%= link_to "こちら", new_member_session_path %>からログインしてください。</p>
