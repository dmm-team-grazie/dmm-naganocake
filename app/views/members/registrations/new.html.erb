<h3>新規会員登録</h3>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
<div class = "row">
  <div class="field">
    <%= f.label :名前 %>
    <span>(姓)</span><%= f.email_field :last_name, autofocus: true, autocomplete: "last_name" %>
    <span>(名)</span><%= f.email_field :first_name, autofocus: true, autocomplete: "first_name" %>
  </div><br>

  <div class="field">
    <%= f.label :フリガナ %>
    <span>(セイ)</span><%= f.email_field :last_kana_name, autofocus: true, autocomplete: "last_kana_name" %>
    <span>(メイ)</span><%= f.email_field :first_kana_name, autofocus: true, autocomplete: "first_kana_name" %>
  </div><br>

  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div><br>

  <div class="field">
    <%= f.label :郵便番号 %><span>(ハイフンなし)</span>
     <%= f.text_field :postal_code %>
  </div><br>

  <div class="field">
    <%= f.label :住所 %>
     <%= f.text_field :address %>
  </div><br>

  <div class="field">
    <%= f.label :電話番号 %><span>(ハイフンなし)</span>
     <%= f.text_field :phone_number %>
  </div><br>

  <div class="field">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div><br>

  <div class="field">
    <%= f.label :パスワード %><span>(確認用)</span>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div><br>

  <div class="actions">
    <%= f.submit "新規登録", class: "btn btn-success " %>
  </div>
<% end %>
</div>

<h3>既に登録済みの方</h3>
<span><%= render "members/shared/links" %>からログインしてください。</span>
