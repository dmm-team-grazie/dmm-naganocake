<!DOCTYPE html>
<html>
  <head>
    <title>DmmNaganocake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <!--ヘッダーの記述-->
     <header class="navbar navbar-inverse" style="background-color: #fffacd;">
        <div class="container">
        <nav><img src="/assets/naganocake_logo.png"></nav>
        <nav>
          <ul class="nav justify-content-end">
            <!--if文でサインインとアウト時の表示を変更-->
            <% if member_signed_in? %>
            <li class="nav-item　mr-4"><P>ようこそ、<%= current_member.first_name %>さん!</P><li>
            <li class="nav-item　mr-3"><%= link_to "マイページ", public_path(current_member), class: "btn btn-outline-success" %></li>
            <li class="nav-item mr-3"><%= link_to "商品一覧", public_items_path, class: "btn btn-outline-success" %></li>
            <li class="nav-item mr-3"><%= link_to "カート", public_items_path, class: "btn btn-outline-success" %></li>
            <li class="nav-item"><%= link_to "ログアウト", destroy_member_session_path, method: :delete, class: "btn btn-outline-success" %></li>
            <% elsif admin_signed_in? %>
            <li class="nav-item mr-3"><%= link_to "商品一覧", public_items_path, class: "btn btn-outline-success" %></li>
            <li class="nav-item mr-3"><%= link_to "会員一覧", admin_members_path, class: "btn btn-outline-success" %></li>
            <li class="nav-item mr-3"><%= link_to "注文履歴一覧", admin_orders_path, class: "btn btn-outline-success" %></li>
            <li class="nav-item mr-3"><%= link_to "ジャンル一覧", admin_genres_path, class: "btn btn-outline-success" %></li>
            <li class="nav-item"><%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: "btn btn-outline-success"%></li>
            <% else %>
            <li class="nav-item mr-3"><%= link_to "商品一覧", public_items_path, class: "btn btn-outline-success" %></li>
            <li class="nav-item mr-3"><%= link_to "新規登録", new_member_registration_path, class: "btn btn-outline-success" %></li>
            <li class="nav-item mr-3"><%= link_to "ログイン", new_member_session_path, class: "btn btn-outline-success" %></li>
            <% end %>
          </ul>
        </nav>
      </div>
    </header>
    <div class="container">
      <%= yield %>
    </div>
    <footer class="fixed-bottom">
        <div class="row justify-content-center" style="background-color: #fffacd;">
            <p>CopyRight Infratop.inc</p>
        </div>
    </footer>
  </body>
</html>
