  <h2 class="view-title">注文情報入力</h2>

  <h3>支払方法</h3>
    <%= form_with(local: true, url: {action: 'confirm'}) do |f| %>
      <ul>
        <li><%= f.radio_button :payment_method, 0, checked: true %>
          <%= f.label :payment_method, "クレジットカード", {value: 0, style: "display: inline-block;"} %>
        </li>
        <li><%= f.radio_button :payment_method, 1 %>
          <%= f.label :payment_method, "銀行振込", {value: 1, style: "display: inline-block;"} %>
        </li>
      </ul>
    
  <h3>お届け先</h3>
      <ul>
        <li>
          <%= f.radio_button :address, 0, checked: true %>
          <%= f.label :address, "ご自身の住所", {value: 0, style: "display: inline-block;"} %>
          <%= current_member.postal_code %><%= current_member.address %><br><%= current_member.address_name %>
        </li>

        <li>
          <%= f.radio_button :address, 1 %>
          <%= f.label :address, "登録済住所から選択", {value: 1, style: "display: inline-block;"} %>
          <%= f.collection_select(:address, @addresses, :id, :address_info, {prompt: "住所を選択してください", class: "form-control"}) %>
        </li>

        <li>
          <%= f.radio_button :address, 2 %>
          <%= f.label :address, "新しいお届け先", {value: 2, style: "display: inline-block;"} %>
          <li>
          <table>
            <tr class="form-group">
              <th class="col-xs-5"><%= f.label "郵便番号（ハイフンなし）" %></th>
              <th><%= f.text_field :postal_code, class: "form-control" %></th>
            </tr>
            <tr class="form-group">
              <th><%= f.label "住所" %></th>
              <th><%= f.text_field :address, class: "form-control" %></th>
            </tr>
            <tr class="form-group">
              <th><%= f.label "宛名" %></th>
              <th><%= f.text_field :address_name, class: "form-control" %></th>
            </tr>
        </table>
      </li>
        </li>
      </ul>
      <div class="c-inline">
        <%= f.submit "確認画面へ進む", class: "btn btn-primary btn-lg"%>
      </div>
    <% end %>
