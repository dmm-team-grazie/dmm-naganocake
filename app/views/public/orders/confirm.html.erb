<h2>注文情報確認</h2>

<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価（税込）</th>
      <th>数量</th>
      <th>小計</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <% @items.each do |item| %>
        <tr>
          <td><%= item.name %></td>
          <td><%= item.price %></td>
          <td><%= item.nember %></td>
          <td><%= item. %></td>
        </tr>
      <% end %>
    </tr>
  </tbody>
</table>

<h2>支払方法</h2>
  <%= @order.payment_method %>
<h2>お届け先</h2>
  <%= @order.address %>
  <%= @order.address_name %>

<%= link_to "購入を確定する", class: "btn btn-primary btn-large" %>