<%= stylesheet_link_tag 'orders' %>
<h2 class="view-title">注文履歴詳細</h2>
<div class="row">
  <div class="col-sm-6">
    <h3>注文情報</h3>
    <table class="table table-bordered">
      <tr>
        <th class="col-xs-3 bg-light">注文日</th>
        <th><%= l @order.created_at, format: :short %></th>
      </tr>
      <tr>
        <th class="col-xs-3 bg-light">配送先</th>
        <th><%= @order.postal_code %><%= @order.address %><br><%= @order.address_name %></th>
      </tr>
      <tr>
        <th class="col-xs-3 bg-light">支払い方法</th>
        <th><%= t @order.payment_method_i18n %></th>
      </tr>
      <tr>
        <th class="col-xs-3 bg-light">ステータス</th>
        <th><%= t @order.order_status_i18n %></th>
      </tr>
    </table>
  </div>

  <div class="col-sm-3">
    <h3>請求情報</h3>
    <table class="table table-bordered">
      <tr>
        <th class="col-xs-6 bg-light">配送料</th>
        <th><%= @postage %>円</th>
      </tr>
      <tr>
        <th class="col-xs-6 bg-light">商品合計</th>
        <th><%= @total_price.to_i %>円</th>
      </tr>
      <tr>
        <th class="col-xs-6 bg-light">ご請求額</th>
        <th><%= @payment %>円</th>
      </tr>
    </table>
  </div>
</div>

<div class="row">
  <div class="col-sm-7">
  <h3>注文内容</h3>
  <table class="table table-bordered">
    <thead>
      <tr class="table-active">
        <th class="col-xs-6">商品名</th>
        <th class="col-xs-3">単価（税込）</th>
        <th class="col-xs-1">個数</th>
        <th class="col-xs-1">小計</th>
      </tr>
    </thead>
    <tbody>
      <% @order.order_details.each do |order_detail| %>
        <tr>
          <td><%= order_detail.item.name %></td>
          <td><%= order_detail.item.taxed_price %></td>
          <td><%= order_detail.number %></td>
          <td><%= order_detail.item.taxed_price * order_detail.number %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  </div><!-- /.col-xs-7 -->
</div><!-- /.row -->
