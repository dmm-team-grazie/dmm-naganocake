<div class="row">
  <%= render 'public/items/genre_index', genres: @genres %>

  <div class="col-xs-9">
    <div class="row">
      <div class="col-xs-6">
        <%= attachment_image_tag @item, :item_image, :fill, 240, 100, fallback: "no-image.jpg", class: "card-img-top" %>
      </div>
      <div class="col-xs-6">
        <h3><%= @item.name %></h3>
        <p><%= @item.introduction %></p>
        <h5><%= @price%></h5>
      </div>
    </div>
  </div>
</div>
