<h2>配送先登録/一覧</h2>
<div class="row">
  <%= form_with model: @address, lacal: true do |f| %>
  <div class="row field">
    <%= f.label :postal_code, "郵便番号(ハイフンなし)", class:"col-xs-4" %>
    <%= f.text_field :postal_code, class: "postal_code col-xs-4" %>
  </div>
  <div class="row field">
    <%= f.label :address, "住所", class:"col-xs-4" %>
    <%= f.text_field :address, class: "address col-xs-7" %>
  </div>
  <div class="row field">
    <%= f.label :address_name, "宛名", class:"col-xs-4" %>
    <%= f.text_field :address_name, class: "address_name col-xs-4" %>
    <%= f.submit "登録する" , class:"btn btn-success btn-sm" %>
  </div>
  <% end %>
</div>
<div class="row">
  <table class="table table-bordered">
    <thead>
      <tr>
        <th class="col-xs-2">郵便番号</th>
        <th class="col-xs-4">住所</th>
        <th class="col-xs-2">宛名</th>
        <th class="col-xs-4"></th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <% @addresses.each do |address| %>
        <td><%= address.postal_code %></td>
        <td><%= address.address %></td>
        <td><%= address.address_name %></td>
        <td>
          <%= link_to "編集する", edit_public_address_path, class:"btn btn-primary btn-sm"%>
          <%= link_to "削除する", public_address_path, method: :delete do,class:"btn btn-danger btn-sm"%>
        </td>
        <% end %>
      </tr>
    </tbody>
  </table>
  <%= paginate @addresses %>
</div>
