<%= stylesheet_link_tag 'items' %>


<div class="row">
  <div class="col-sm-3">
    <%= render 'public/items/genre_index', genres: @genres %>
  </div>

  <div class="col-sm-9">
    <h2 class="view-title">商品 -<%= @genre.name %>- (全<%= @items.count %>件)</h2>
    <div class="row row-cols-1 row-cols-md-3">
      <% @items.each do |item| %>
        <%= link_to public_item_path(item) do %>
          <div class="col mb-3">
            <div class="card card_height">
              <%= attachment_image_tag item, :item_image,format:'jpg', fallback: "/assets/no-image.jpg", class: "card-img-top" %>
              <div class="card-body">
                <h5 class="card-title link_text"><%= item.name %></h5>
                <p class="card-text link_text">¥<%= item.non_taxed_price.to_s(:delimited) %></p>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
      <%= paginate @items %>
    </div>
  </div>
</div>
