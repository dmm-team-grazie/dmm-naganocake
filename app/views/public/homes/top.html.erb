<div class="row">
  <div class="col-xs-4">
    <%= render 'public/items/genre_index', genres: @genres %>
  </div>
  <div class="col-xs-8">
    <h2>おすすめ商品</h2>
    <% @items.first(8).each do |item| %>
      <div class="col mb-3">
        <div class="card">
          <%= attachment_image_tag item, :item_image, :fill, 160, 90, fallback: "no-image.jpg", class: "card-img-top" %>
          <div class="card-body">
            <h5 class="card-title"><%= link_to item.name, puclic_item_path(item.id) %></h5>
            <p class="card-text">¥<%= item.non_taxed_price %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <%= link_to "もっと見る>>", public_items_path,class:"btn btn-link" %>
</div>
