<%= stylesheet_link_tag 'homes' %>


<div id="carouselExampleFade" class="carousel slide carousel-fade" data-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img src="/assets/team_pic.jpg" class="d-block w-100" alt="cake_top">
    </div>
    <div class="carousel-item">
      <img src="/assets/Nagano_cake_pic.jpg" class="d-block w-100" alt="...">
    </div>
    <div class="carousel-item">
      <img src="/assets/cake_top.jpg" class="d-block w-100" alt="...">
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleFade" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleFade" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

<div class="row">
  <div class="text_contents">
    <p>
      このサイトは、ケーキ販売のECサイトになります。
      <br>
      会員でない方も安心して商品をご覧になれますが、
      <br>
      購入には会員登録が必要になります。
    </p>
  </div>
  <div class="image_space">

  </div>
</div>


<div class="row">
  <div class="col-sm-4">
    <%= render 'public/items/genre_index', genres: @genres %>
  </div>
  <div class="col-sm-8">
    <h2 class="view-title">おすすめ商品</h2>
    <div class="row row-cols-1 row-cols-md-3">
      <% @items.shuffle.first(6).each do |item| %>
        <% if item.genre.is_valid == true %>
          <div class="col mb-3">
            <div class="card h-100">
              <%= attachment_image_tag item, :item_image, format:'jpg', fallback: "/assets/no-image.jpg", class: "card-img-top" %>
              <div class="card-body">
                <h5 class="card-title"><%= link_to item.name, public_item_path(item), class: "link_text" %></h5>
                <p class="card-text">¥<%= item.non_taxed_price.to_s(:delimited) %></p>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
  <%= link_to "もっと見る>>", public_items_path,class:"btn btn-link" %>
</div>
