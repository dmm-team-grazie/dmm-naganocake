<h2>ショッピングカート</h2>

<%= link_to "カートを空にする", public_destroy_public_cart_items_path, method: :delete, class: "btn btn-danger" %><br><br>

<div class = "row">
<div class="col-md-12">
<table class ="table table-bordered">
	<thead class = "bg-light">
	<tr>
		<th class = "col-xs-4">商品名</th>
		<th class = "col-xs-2">単価(税込)</th>
		<th class = "col-xs-2">数量</th>
		<th class = "col-xs-2">小計</th>
		<th class = "col-xs-2"></th>
	</tr>
	</thead>

	<tbody>
	<% @cart_items.each do |cart_item| %>

	<tr>
		<td><%= attachment_image_tag cart_item.item, :item_image, :fill, 15, 5, format:'jpg', fallback: "no-image.jpg", class: "card-img-top" %><%= cart_item.item.name%></td>
		<td><%= cart_item.item.taxed_price %></td>
		<td>
			<%= form_with model: cart_item, url: public_cart_item_path(cart_item), local: true do |f| %>
			<%= f.text_field :number %>
			<%= f.submit "変更", class: "btn btn-primary" %>
			<% end %>
		</td>
		<td><%= cart_item.item.taxed_price * cart_item.number %></td>
		<td><%= link_to "削除する", public_destroy_public_cart_item_path(cart_item), method: :delete, class: "btn btn-danger" %></td>
	</tr>

	<% end %>
	</tbody>

</table><br>
</div>
</div>

<%= link_to "買い物を続ける", root_path, class: "btn btn-primary" %><br><br>

<div class = "row">
<table class ="table table-bordered">

	<tr>
		<th>合計金額</th>
		<td>
		<% @total_price = 0 %>
		<% @cart_items.each do |cart_item| %>
		<% item = cart_item.item %>
		<% @total_price += item.taxed_price * cart_item.number %>
		<% end %>
		<%= @total_price %>
		</td>
	</tr>

</table>
</div>

<div class = "confirm">
<%= link_to "情報入力に進む", new_public_order_path, class: "btn btn-success" %>
</div>

