<h2>ショッピングカート</h2>

<%= link_to "カートを空にする", public_cart_items_path, method: :delete, class: "btn btn-danger" %>

<table border="1">
	<tr>
		<th>商品名</th>
		<th>単価(税込)</th>
		<th>数量</th>
		<th>小計</th>
		<th></th>
	</tr>

	<% @cart_items.each do |cart_item| %>

	<tr>
		<td><%= cart_item.items.name%></td>
		<td><%= @price %></td>
		<td>
			<%= form_with model: cart_item, local: true do |f| %>
			<%= f.text_field :number %>
			<%= f.submit "変更", class: "btn btn-primary" %>
		</td>
		<td><%= @price * cart_item.number %></td>
		<td><%= link_to "削除する", public_cart_items_path(cart_item), method: :delete, class: "btn btn-danger" %></td>
	</tr>

	<% end %>

</table>

<%= link_to "買い物を続ける", root_path, class: "btn btn-primary" %>

<table>

	<tr>
		<th>合計金額</th>
		<td></td>
	</tr>

</table>

<%= link_to "情報入力に進む", "#", class: "button_custom btn btn-success center-block" %>
