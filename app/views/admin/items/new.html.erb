<%= stylesheet_link_tag 'items' %>


<div class="row">
  <h2 class="view-title">商品新規登録</h2>
  <% if @item.errors.any? %>
    <div id="error_explanation">
      <h2><%= @item.errors.count %>errors prohibited this obj from being saved:</h2>
      <ul>
        <% @item.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_with model: @item,url: {controller: 'admin/items', action: 'create' }, local: true do |f| %>
    <div class="col-xs-4">
      <%= f.attachment_field :item_image, class: "item_image" %>
    </div>
    <div class="col-xs-4">
      <div class="field">
      	<%= f.label :name, "商品名" %>
      	<%= f.text_field :name, class: "name" %>
      </div>
      <div class="field">
      	<%= f.label :introduction, "商品説明" %>
      	<%= f.text_area :introduction, class: "introduction" %>
      </div>
      <div class="field">
      	<%= f.label :genre_id, "ジャンル" %>
      	<%= f.select :genre_id, Genre.all.map{|genre| [genre.name, genre.id]} %>
      </div>
      <div class="field">
      	<%= f.label :non_taxed_price, "税抜価格" %>
      	<%= f.text_field :non_taxed_price, class: "non_taxed_price" %>円
      </div>
      <div class="field">
      	<%= f.label :is_valid, "販売ステータス" %>
      	<%= f.select :is_valid,[["販売中",true],["販売停止中",false]],{include_blank: false, selected: true},{class: "is_valid"} %>
      </div>
    </div>
  <%= f.submit "新規登録" , class:"btn btn-primary btn-sm" %>
  <% end %>

</div>
