<div class="row">
  <h2 class="text-center view-title">ジャンル一覧・追加</h2>
</div>

<%= form_with model:[:admin, @genre],local: true do |f| %>
   <% if @genre.errors %>
      <ul>
        <% @genre.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
       </ul>
  <% end %>
  <div class="form-inline">
    <div class="form-group mx-2">
    <label><font size="1">ジャンル</font></label>
    </div>
    <div class="form-group">
    <%= f.text_field :name %>
    </div>
    <div class="form-group mx-2">
      <div class="mx-1"><%= f.radio_button :is_valid, :true %></div>
      <%= f.label :is_valid, "有効", value: true %>
    </div>
    <div class="form-group mx-2">
      <div class="mx-1"><%= f.radio_button :is_valid, :false %></div>
      <%= f.label :is_valid, "無効", value: false %>
    </div>
    <div class="form-group">
    <%= f.submit "追加", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>


<div class="row mt-5">
	<div class="col-sm-4">
  <table class="table">
    <thead class="table_color">
      <tr>
        <th>ジャンル</th>
        <th>状態</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
          <td>
            <% if genre.is_valid == true %>
              <span>有効</span>
            <% else %>
              <span>無効</span>
            <% end %>
          </td>
          <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-primary" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  </div>
 	<div class="col-sm-8"></div>
</div>