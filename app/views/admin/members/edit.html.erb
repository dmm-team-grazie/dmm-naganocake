<h2><%= @member.last_name %><%= @member.first_name %>の会員情報</h2>

<%= form_with model:[:admin, @member],local: true do |f| %>

<div class = "form-row">
	<label class="col-sm-2"><%= f.label "会員ID" %></label>
	<%= id %>
</div>

<div class = "form-row">
  <label class="col-sm-2"><%= f.label "名前" %></label>
    <span class = "col-sm-1">(姓)</span><%= f.text_field :last_name, class: "col-sm-3" %>
    <span class = "col-sm-1">(名)</span><%= f.text_field :first_name, class: "col-sm-3" %>
</div><br>

<div class = "form-row">
    <label class = "col-sm-2"><%= f.label "フリガナ" %></label>
    <span class = "col-sm-1">(セイ)</span><%= f.text_field :last_kana_name, class: "col-sm-3" %>
    <span class = "col-sm-1">(メイ)</span><%= f.text_field :first_kana_name, class: "col-sm-3" %>
</div><br>

<div class = "form-row">
    <label class = "col-sm-3"><%= f.label "email" %></label>
    <%= f.email_field :email, class: "col-sm-3" %>
</div><br>

<div class = "form-row">
    <label class = "col-sm-3"><%= f.label "郵便番号" %><span>(ハイフンなし)</span></label>
    <%= f.text_field :postal_code, class: "col-sm-3" %>
</div><br>

<div class = "form-row">
    <label class = "col-sm-3"><%= f.label "住所" %></label>
    <%= f.text_field :address, class: "col-sm-7" %>
</div><br>

<div class = "form-row">
    <label class = "col-sm-3"><%= f.label "電話番号" %><span>(ハイフンなし)</span></label>
    <%= f.text_field :phone_number, class: "col-sm-3" %>
</div><br>

<div class ="form_row">
	<label class = "col-sm-3"><%= f.label "会員ステータス" %></label>
	<%= f.radio_button :is_valid, :true %>
    <%= f.label :is_valid, "有効", value: true %>
    <%= f.radio_button :is_valid, :false %>
    <%= f.label :is_valid, "無効", value: false %>
</div>

<%= f.submit "変更を保存する" %>

<% end %>

