<h2><%= @member.last_name %><%= @member.first_name %>様の会員情報</h2>

<% if flash[:notice] %>
<div class="flash">
	<%= flash[:notice] %>
</div>
<% end %>

<div class = "row">
<div style="width: 50%;">
<table class="table table-borderless">
	<tr>
		<th>顧客ID</th>
		<td>
			<%= @member.id %>
			<% if @member.is_valid == true %>
				<span class="badge badge-info border border-dark text-dark">有効会員</span>
			<% else %>
				<span class="badge badge-info border border-dark text-dark">無効会員</span>
			<% end %>
		</td>
	</tr>

	<tr>
		<th>氏名</th>
		<td><%= @member.last_name %><%= @member.first_name %></td>
	</tr>

	<tr>
		<th>フリガナ</th>
		<td><%= @member.last_kana_name %><%= @member.first_kana_name %></td>
	</tr>

	<tr>
		<th>郵便番号</th>
		<td><%= @member.postal_code %></td>
	</tr>

	<tr>
		<th>住所</th>
		<td><%= @member.address %></td>
	</tr>

	<tr>
		<th>電話番号</th>
		<td><%= @member.phone_number %></td>
	</tr>

	<tr>
		<th>メールアドレス</th>
		<td><%= @member.email %></td>
	</tr>
</table>
</div>
</div>

<%= link_to "編集する", edit_admin_member_path(@member), class: "btn btn-primary" %>
<%= link_to "注文履歴一覧を見る", admin_orders_path(@member) , class: "btn btn-primary" %>